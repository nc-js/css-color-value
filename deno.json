{
	"name": "@example/package",
	"version": "0.1.0",
	"license": "MIT",
	"tasks": {
		"dev": "deno test --watch",
		"doc": "deno doc --html ./src"
	},
	"publish": {
		"include": [
			"src/",
			"!src/**/*_test.ts",
			"README.md",
			"LICENSE"
		]
	},
	"compilerOptions": {
		"lib": [
			"deno.ns",
			"DOM",
			"DOM.Iterable",
			"ESNext"
		]
	},
	"exports": {
		".": "./src/mod.ts"
	},
	"imports": {
		"@nc/whatwg-infra": "jsr:@nc/whatwg-infra@^1.1.0",
		"@std/assert": "jsr:@std/assert@1",
		"@std/testing": "jsr:@std/testing@^1.0.5"
	},
	"fmt": {
		"include": [
			"src/"
		],
		"useTabs": true,
		"semiColons": false,
		"singleQuote": true,
		"indentWidth": 4
	},
	"lint": {
		"include": [
			"src/"
		]
	}
}
