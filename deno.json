{
	"name": "@nc/css-color-value",
	"version": "0.2.1",
	"license": "MIT",
	"tasks": {
		"dev": "deno test --watch",
		"doc": "deno doc --html ./src"
	},
	"publish": {
		"include": [
			"src/",
			"!src/**/*_test.ts",
			"README.md",
			"LICENSE"
		]
	},
	"compilerOptions": {
		"lib": [
			"deno.ns",
			"DOM",
			"DOM.Iterable",
			"ESNext"
		]
	},
	"exports": {
		".": "./src/mod.ts",
		"./css-color-value": "./src/css-color-value.ts",
		"./matches": "./src/matches.ts",
		"./types": "./src/types.ts",
		"./values": "./src/values/mod.ts"
	},
	"imports": {
		"@std/assert": "jsr:@std/assert@1",
		"@std/testing": "jsr:@std/testing@^1.0.5"
	},
	"fmt": {
		"include": [
			"src/"
		],
		"useTabs": true,
		"semiColons": false,
		"singleQuote": true,
		"indentWidth": 4
	},
	"lint": {
		"include": [
			"src/"
		]
	}
}
